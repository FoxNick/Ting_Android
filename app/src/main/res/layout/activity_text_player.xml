<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.animalize.ting.PlayerUI.TextPlayerActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#006600" />

    <com.github.animalize.ting.PlayerUI.PlayerTextWidget
        android:id="@+id/player_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.github.animalize.ting.PlayerUI.PlayerPanelWidget
        android:id="@+id/player_panel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
